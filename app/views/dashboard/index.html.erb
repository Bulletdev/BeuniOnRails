<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="font-lexend text-3xl font-bold mb-8" style="color: var(--beuni-text);">
        Dashboard - <%= current_organization.name %>
      </h2>

      <!-- Beuni Service Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="beuni-service-card beuni-orange-card">
          <h3 class="font-lexend text-lg font-medium mb-2">🎁 Gestão de Presentes</h3>
          <p class="text-sm opacity-90">Crie e gerencie campanhas de presentes personalizadas para seus funcionários</p>
        </div>

        <div class="beuni-service-card beuni-green-card">
          <h3 class="font-lexend text-lg font-medium mb-2">📦 Logística Integrada</h3>
          <p class="text-sm opacity-90">Sistema completo de envio e rastreamento de presentes</p>
        </div>

        <div class="beuni-service-card beuni-brown-card">
          <h3 class="font-lexend text-lg font-medium mb-2">📊 Relatórios Detalhados</h3>
          <p class="text-sm opacity-90">Acompanhe métricas e performance das suas campanhas</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="beuni-card overflow-hidden p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--beuni-orange);">
                <span class="text-white text-lg">👥</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="font-lexend text-sm font-medium truncate" style="color: var(--beuni-text); opacity: 0.8;">
                  Total de Funcionários
                </dt>
                <dd class="font-lexend text-2xl font-bold" style="color: var(--beuni-text);">
                  <%= @employees_count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="beuni-card overflow-hidden p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--beuni-green);">
                <span class="text-white text-lg">🎂</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="font-lexend text-sm font-medium truncate" style="color: var(--beuni-text); opacity: 0.8;">
                  Aniversários Este Mês
                </dt>
                <dd class="font-lexend text-2xl font-bold" style="color: var(--beuni-text);">
                  <%= @birthday_this_month %>
                </dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="beuni-card overflow-hidden p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--beuni-orange-border);">
                <span class="text-white text-lg">📦</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="font-lexend text-sm font-medium truncate" style="color: var(--beuni-text); opacity: 0.8;">
                  Envios Pendentes
                </dt>
                <dd class="font-lexend text-2xl font-bold" style="color: var(--beuni-text);">
                  <%= @pending_shipments %>
                </dd>
              </dl>
            </div>
          </div>
        </div>

        <div class="beuni-card overflow-hidden p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--beuni-brown);">
                <span class="text-white text-lg">🎁</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="font-lexend text-sm font-medium truncate" style="color: var(--beuni-text); opacity: 0.8;">
                  Campanhas Ativas
                </dt>
                <dd class="font-lexend text-2xl font-bold" style="color: var(--beuni-text);">
                  <%= current_organization.gift_campaigns.active.count %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="beuni-card">
          <div class="px-6 py-6">
            <h3 class="font-lexend text-lg font-medium mb-4" style="color: var(--beuni-text);">
              🎂 Próximos Aniversários
            </h3>
            <% if @upcoming_birthdays.any? %>
              <div class="space-y-4">
                <% @upcoming_birthdays.each do |employee| %>
                  <div class="flex items-center justify-between p-3 rounded-lg transition-all duration-200 hover:transform hover:translateX-1" style="background-color: var(--beuni-cream); border: 1px solid var(--beuni-orange); opacity: 0.8;">
                    <div>
                      <p class="font-lexend text-sm font-medium" style="color: var(--beuni-text);"><%= employee.name %></p>
                      <p class="text-sm" style="color: var(--beuni-text); opacity: 0.7;"><%= employee.department %></p>
                    </div>
                    <div class="text-right">
                      <p class="font-lexend text-sm font-medium" style="color: var(--beuni-text);"><%= employee.birth_date.strftime("%d/%m") %></p>
                      <p class="text-xs" style="color: var(--beuni-text); opacity: 0.6;"><%= employee.age %> anos</p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm" style="color: var(--beuni-text); opacity: 0.7;">Nenhum aniversário este mês.</p>
            <% end %>
          </div>
        </div>

        <div class="beuni-card">
          <div class="px-6 py-6">
            <h3 class="font-lexend text-lg font-medium mb-4" style="color: var(--beuni-text);">
              📦 Envios Recentes
            </h3>
            <% if @recent_shipments.any? %>
              <div class="space-y-4">
                <% @recent_shipments.each do |shipment| %>
                  <div class="flex items-center justify-between p-3 rounded-lg transition-all duration-200 hover:transform hover:translateX-1" style="background-color: var(--beuni-cream); border: 1px solid var(--beuni-orange); opacity: 0.8;">
                    <div>
                      <p class="font-lexend text-sm font-medium" style="color: var(--beuni-text);"><%= shipment.employee.name %></p>
                      <p class="text-sm" style="color: var(--beuni-text); opacity: 0.7;"><%= shipment.gift_campaign.name %></p>
                    </div>
                    <div class="text-right">
                      <span class="beuni-status-badge
                        <%= case shipment.status
                            when 'scheduled' then 'beuni-status-scheduled'
                            when 'processing' then 'beuni-status-processing'
                            when 'sent', 'delivered' then 'beuni-status-success'
                            when 'failed' then 'beuni-status-failed'
                            end %>">
                        <%= shipment.status.humanize %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm" style="color: var(--beuni-text); opacity: 0.7;">Nenhum envio registrado.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>