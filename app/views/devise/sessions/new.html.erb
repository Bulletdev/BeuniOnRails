<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background-color: #F9FAFB;">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-2">
        <span style="color: #6B46C1;">Beuni</span> <span style="color: #EC4899;">Gifts</span>
      </h1>
      <h2 class="mt-6 text-center text-2xl font-bold text-gray-700">
        Fa√ßa seu login
      </h2>
    </div>
    <div class="bg-white shadow-beuni rounded-beuni p-8 border border-gray-100">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "mt-2 space-y-6") do |form| %>
        <div class="space-y-4">
          <div>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail",
                class: "block w-full px-4 py-3 rounded-full border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 sm:text-sm transition-all duration-200",
                style: "focus:ring-color: #6B46C1; focus:border-color: #6B46C1;" %>
          </div>
          <div>
            <%= form.password_field :password, autocomplete: "current-password", placeholder: "Senha",
                class: "block w-full px-4 py-3 rounded-full border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 sm:text-sm transition-all duration-200",
                style: "focus:ring-color: #6B46C1; focus:border-color: #6B46C1;" %>
          </div>
        </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

        <div>
          <%= form.submit "Entrar",
              class: "w-full flex justify-center py-3 px-6 border border-transparent text-sm font-medium rounded-full text-white transition-all duration-200 hover:transform hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2",
              style: "background: linear-gradient(135deg, #6B46C1 0%, #EC4899 100%); focus:ring-color: #6B46C1;" %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= link_to "Esqueci minha senha", new_password_path(resource_name),
          class: "text-sm transition-colors duration-200",
          style: "color: #6B46C1;" %>
      <%= link_to "Criar conta", new_registration_path(resource_name),
          class: "text-sm transition-colors duration-200",
          style: "color: #EC4899;" %>
    </div>
  </div>
</div>