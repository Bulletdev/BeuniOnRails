<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Login - Beuni Gifts
      </h2>
    </div>
    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "mt-8 space-y-6") do |form| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= form.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= form.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <div>
        <%= form.submit "Entrar", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
        <%= link_to "Criar conta", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>