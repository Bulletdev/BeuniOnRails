<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Criar Conta - Beuni Gifts
      </h2>
    </div>
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "mt-8 space-y-6") do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.text_field :name, placeholder: "Nome completo", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.email_field :email, autocomplete: "email", placeholder: "E-mail", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.password_field :password, autocomplete: "new-password", placeholder: "Senha (mínimo 6 caracteres)", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmação da senha", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit "Criar Conta", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="text-center">
        <%= link_to "Já tem conta? Faça login", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>